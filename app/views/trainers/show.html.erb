<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>
<p>Pokemon: </p>
<%= Pokemon.where(trainer_id: @trainer.id).find_each do |poke| %>
    <%= poke.name %>
    Level: <%= poke.level %>
    Health: <%= poke.health %>
    <%= button_to "Damage!", damage_path(id: poke), :class => "button medium", :method => :patch %>
<% end %>
<%= button_to "Create New Pokemon!", new_path(), :class => "button medium", :method => :get %>
